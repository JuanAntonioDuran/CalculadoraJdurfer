<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <!-- Layout contenedor -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"




        >

        <!-- TextView que mostrara el resultado -->
        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Resultado..."
            android:layout_margin="40dp"
            android:textSize="40dp"
            android:textAlignment="textEnd"
            android:background="@color/white"





            />

        <!-- Layout con botones + - * / -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_margin="8dp"
                android:backgroundTint="@color/orange"

                />

            <Button
                android:id="@+id/buttonRes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/orange"
                android:text="-"

                />

            <Button
                android:id="@+id/buttonProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/orange"
                android:text="*"

                />
            <Button
                android:id="@+id/buttonDivision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/orange"
                android:text="/"

                />




        </LinearLayout>

        <!-- Boton Reset -->
        <Button
            android:id="@+id/buttonResset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/red"
            android:text="Ã‡"

            />

        <!-- Layout con botones 1 2 3 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />

            <Button
                android:id="@+id/buttonNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="10dp"

                />

            <Button
                android:id="@+id/buttonNumber3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
        </LinearLayout>

        <!-- Layout con botones 4 5 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonNumber4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />

            <Button
                android:id="@+id/buttonNumber5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="10dp"

                />

            <Button
                android:id="@+id/buttonNumber6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
        </LinearLayout>

        <!-- Layout con botones 7 8 9 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonNumber7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />

            <Button
                android:id="@+id/buttonNumber8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="10dp"

                />

            <Button
                android:id="@+id/buttonNumber9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
        </LinearLayout>


         <!-- Layaut con boton 0 y = -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonNumber0"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="0"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="10dp"

                />


        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>